{
  "extends": [
    "@rocketseat/eslint-config/node",
    "plugin:drizzle/all"
  ],
  "plugins": ["drizzle", "simple-import-sort"],
  "rules": {
    "prettier/prettier": ["error", {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "endOfLine": "auto",
        "semi": true
      }
    ]
  }
}